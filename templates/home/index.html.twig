    <!-- Add new CSS enhancements -->
    <style>
        /* New Quality Badges Styles */
        .quality-badges {
            display: flex;
            justify-content: center;
            gap: 3rem;
            padding: 2rem;
            background: var(--white);
            box-shadow: 0 -5px 20px rgba(0,0,0,0.05);
        }

        .badge-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem 2rem;
            border-radius: 50px;
            background: var(--light-color);
            transition: transform 0.3s ease;
        }

        .badge-item:hover {
            transform: translateY(-5px);
        }

        /* Enhanced Product Cards */
        .product-badge {
            position: absolute;
            top: 15px;
            left: -10px;
            background: var(--primary-color);
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 30px;
            font-size: 0.9rem;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

        .product-meta {
            display: flex;
            justify-content: space-between;
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 1rem;
        }

        /* Contact Section Styles */
        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
        }

        .info-card {
            padding: 2rem;
            margin-bottom: 1.5rem;
            background: var(--light-color);
            border-radius: 15px;
            transition: transform 0.3s ease;
        }

        .info-card:hover {
            transform: translateY(-5px);
        }

        /* Additional Animations */
        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        /* Mobile Optimization */
        @media (max-width: 768px) {
            .contact-grid {
                grid-template-columns: 1fr;
            }
            
            .quality-badges {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
