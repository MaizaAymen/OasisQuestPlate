<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        {% set currentRoute = app.request.attributes.get('_route') %}

        {% if currentRoute and currentRoute|slice(0,6) == 'admin_' %}
            <div class="area"></div>
            <nav class="main-menu">
                <ul>
                    <li>
                        <a href="{{ path('admin_product_index') }}">
                            <span class="nav-icon"><i class="fa fa-box fa-2x"></i></span>
                            <span class="nav-text">Products</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_product_new') }}">
                            <span class="nav-icon"><i class="fa fa-plus fa-2x"></i></span>
                            <span class="nav-text">Add Product</span>
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('admin_users_index') }}">
                            <span class="nav-icon"><i class="fa fa-users fa-2x"></i></span>
                            <span class="nav-text">Users</span>
                        </a>
                    </li>
                </ul>
                <ul class="logout">
                    <li>
                        <a href="{{ path('app_logout') }}">
                            <span class="nav-icon"><i class="fa fa-power-off fa-2x"></i></span>
                            <span class="nav-text">Logout</span>
                        </a>
                    </li>
                </ul>
            </nav>
        {% endif %}

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container">
            <a class="navbar-brand" href="{{ path('app_shop') }}">Nefta Dates</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                {% if app.user %}
                  <li class="nav-item"><a class="nav-link" href="{{ path('app_shop') }}">Shop</a></li>
                  <li class="nav-item"><a class="nav-link" href="{{ path('app_ai_assist_form') }}">Assistant</a></li>
                {% endif %}
                <li class="nav-item"><a class="nav-link" href="{{ path('app_about') }}">About</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_contact') }}">Contact</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                  <li class="nav-item"><a class="nav-link" href="{{ path('admin_product_index') }}">Admin</a></li>
                {% endif %}
              </ul>
              <ul class="navbar-nav ms-auto">
                {% if app.user %}
                    <li class="nav-item d-flex align-items-center me-3">
                        <div class="user-circle me-2">{{ app.user.email|slice(0, 1)|upper }}</div>
                        <span class="nav-link-text">{{ (app.user.email|split('@')|first)|capitalize }}</span>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Logout</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_cart') }}">Cart</a></li>
                {% else %}
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">Register</a></li>
                {% endif %}
              </ul>
            </div>
          </div>
        </nav>

        <div class="container mt-4">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
