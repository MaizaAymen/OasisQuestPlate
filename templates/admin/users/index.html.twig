{% extends 'base.html.twig' %}

{% block title %}Admin - User Management{% endblock %}

{% block body %}
<div class="container">
    <h1>User Management</h1>
    
    <div class="mb-4">
        <a href="{{ path('admin_product_index') }}" class="btn btn-secondary">Back to Products</a>
    </div>
    
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Users</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.id }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge bg-{% if role == 'ROLE_ADMIN' %}danger{% elseif role == 'ROLE_USER' %}success{% else %}secondary{% endif %}">
                                        {{ role }}
                                    </span>
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ path('admin_user_details', {'id': user.id}) }}" class="btn btn-info btn-sm">View Details</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center">No users found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}