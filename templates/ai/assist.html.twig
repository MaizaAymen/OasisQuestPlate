{% extends 'base.html.twig' %}

{% block title %}Chat with AI Assistant - Nefta Dates{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .ai-assistant-section {
      margin-top: 90px;
      min-height: calc(100vh - 90px);
      background-color: var(--light-color);
    }
    
    .chatgpt-container {
      display: flex;
      height: calc(100vh - 150px);
      max-width: 1400px;
      margin: 0 auto;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .chatgpt-sidebar {
      width: 260px;
      background-color: var(--secondary-color);
      color: white;
      padding: 20px;
      display: flex;
      flex-direction: column;
    }
    
    .new-chat-btn {
      display: flex;
      align-items: center;
      gap: 10px;
      background-color: rgba(255,255,255,0.1);
      color: white;
      border: 1px solid rgba(255,255,255,0.2);
      border-radius: 6px;
      padding: 10px 15px;
      width: 100%;
      margin-bottom: 20px;
      transition: all 0.2s ease;
      cursor: pointer;
    }
    
    .new-chat-btn:hover {
      background-color: rgba(255,255,255,0.2);
    }
    
    .history-list {
      list-style: none;
      padding: 0;
      margin: 0;
      overflow-y: auto;
      flex-grow: 1;
    }
    
    .history-item {
      padding: 10px;
      border-radius: 6px;
      cursor: pointer;
      margin-bottom: 5px;
      font-size: 14px;
      transition: all 0.2s ease;
    }
    
    .history-item:hover {
      background-color: rgba(255,255,255,0.1);
    }
    
    .history-item.active {
      background-color: var(--primary-color);
      color: var(--secondary-color);
      font-weight: bold;
    }
    
    .chatgpt-main {
      flex-grow: 1;
      background-color: white;
      display: flex;
      flex-direction: column;
    }
    
    .chat-header {
      padding: 15px 20px;
      border-bottom: 1px solid #eaeaea;
      font-weight: bold;
      color: var(--secondary-color);
      display: flex;
      align-items: center;
      gap: 10px;
      background-color: var(--light-color);
    }
    
    .chat-header::before {
      content: "";
      display: inline-block;
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: #4caf50;
      margin-right: 6px;
    }
    
    .chat-messages {
      flex-grow: 1;
      overflow-y: auto;
      padding: 20px;
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    
    .welcome-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      text-align: center;
      padding: 20px;
    }
    
    .welcome-icon {
      font-size: 4rem;
      color: var(--primary-color);
      margin-bottom: 20px;
    }
    
    .welcome-title {
      color: var(--secondary-color);
      margin-bottom: 10px;
      font-weight: 700;
    }
    
    .welcome-text {
      color: #666;
      max-width: 600px;
      margin-bottom: 30px;
    }
    
    .suggestion-container {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
      max-width: 700px;
    }
    
    .suggestion-item {
      background-color: var(--light-color);
      border: 1px solid #e0e0e0;
      border-radius: 20px;
      padding: 10px 20px;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    .suggestion-item:hover {
      background-color: var(--primary-color);
      color: white;
    }
    
    .message {
      display: flex;
      gap: 16px;
      padding: 15px;
      border-radius: 10px;
    }
    
    .message.user {
      background-color: #f0f7ff;
    }
    
    .message.assistant {
      background-color: #f9f5eb;
    }
    
    .avatar {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      flex-shrink: 0;
    }
    
    .message.user .avatar {
      background-color: var(--primary-color);
      color: white;
    }
    
    .message.assistant .avatar {
      background-color: var(--secondary-color);
      color: white;
    }
    
    .message-content {
      flex-grow: 1;
    }
    
    .message-text p:last-child {
      margin-bottom: 0;
    }
    
    .input-area {
      padding: 20px;
      border-top: 1px solid #eaeaea;
    }
    
    .input-container {
      display: flex;
      align-items: center;
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 8px 15px;
      background-color: white;
    }
    
    .input-container:focus-within {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 2px rgba(212, 167, 98, 0.2);
    }
    
    #ai-query {
      flex-grow: 1;
      border: none;
      outline: none;
      padding: 10px 0;
      resize: none;
      font-family: inherit;
      background-color: transparent;
    }
    
    #ai-submit {
      background-color: var(--primary-color);
      color: white;
      width: 38px;
      height: 38px;
      border-radius: 50%;
      border: none;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.2s ease;
    }
    
    #ai-submit:hover {
      background-color: var(--secondary-color);
    }
    
    #ai-submit:disabled {
      background-color: #ddd;
      cursor: not-allowed;
    }
    
    /* Responsiveness */
    @media (max-width: 768px) {
      .chatgpt-container {
        flex-direction: column;
        height: calc(100vh - 100px);
      }
      
      .chatgpt-sidebar {
        width: 100%;
        height: 60px;
        padding: 10px;
        flex-direction: row;
        align-items: center;
      }
      
      .new-chat-btn {
        width: auto;
        margin-bottom: 0;
        margin-right: 10px;
      }
      
      .history-list {
        display: flex;
        overflow-x: auto;
        height: 40px;
        align-items: center;
      }
      
      .history-item {
        white-space: nowrap;
        margin-right: 10px;
        margin-bottom: 0;
      }
    }
  </style>
{% endblock %}

