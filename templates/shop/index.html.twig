{% extends 'base.html.twig' %}

{% block title %}Shop - Nefta Dates{% endblock %}

{% block body %}
<div class="row">
    {% for product in products %}
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="/{{ product.image }}" class="card-img-top" alt="{{ product.name }}">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ product.name }}</h5>
                    <p class="card-text">{{ product.description|slice(0, 100) }}...</p>
                    <p class="card-text fw-bold mt-auto">{{ product.price }} TND</p>
                    <div class="mt-2">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-outline-primary btn-sm">View</a>
                        <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-primary btn-sm">Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <p>No products available.</p>
    {% endfor %}
</div>
{% endblock %}
