{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Nefta Dates{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6">
        <img src="/{{ product.image }}" class="img-fluid" alt="{{ product.name }}">
    </div>
    <div class="col-md-6">
        <h2>{{ product.name }}</h2>
        <p class="fw-bold">{{ product.price }} TND</p>
        <p>{{ product.description }}</p>
        <a href="{{ path('app_cart_add', {'id': product.id}) }}" class="btn btn-primary">Add to Cart</a>
    </div>
</div>
{% endblock %}